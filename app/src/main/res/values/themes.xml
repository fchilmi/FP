<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
    </style>
        <!-- Customize your theme here. -->
    <style name="TextAppearance.FP.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/midnight</item>
        <item name="android:textColor">#E36262</item>
    </style>

    <style name="TextAppearance.FP.Info" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Widget.FP.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.FP.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="TextAppearance.FP.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.FP.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="backgroundTint">#EB9C9C</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/buttonlist
        </item>
    </style>
    <style name="Widget.FP.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.FP.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:theme">@style/Theme.FP</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.FP.Toolbar</item>
    </style>

    <style name="TextAppearance.FP.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.FP.Text" parent="TextAppearance.FP.TextInputLayout.HintText">
        <item name="fontFamily">franklin gothic</item>
        <item name="android:textColor">#191919</item>
    </style>
    <style name="Theme.FP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>